{
	"name": "medicheck-ai",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"convex": "^1.30.0",
			"better-auth": "1.3.34",
			"@convex-dev/better-auth": "^0.9.11",
			"zod": "^4.1.13"
		}
	},
	"scripts": {
		"check": "biome check --write --unsafe .",
		"dev": "turbo dev",
		"dev:kg": "turbo -F @medicheck-ai/kg-service dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F @medicheck-ai/backend dev",
		"dev:setup": "turbo -F @medicheck-ai/backend dev:setup",
		"clean": "turbo clean && rm -rf node_modules .turbo bun.lock"
	},
	"devDependencies": {
		"turbo": "^2.6.3",
		"@biomejs/biome": "^2.3.8"
	},
	"packageManager": "bun@1.3.4"
}